<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".ExplicacionFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/id_gif"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="match_parent"
            android:src="@drawable/mujerhablando"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/imgsinhablar"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="match_parent"
            android:src="@drawable/mujersinhablar"
            android:visibility="invisible"
            android:layout_marginBottom="@dimen/_10sdp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_explicaciones"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_180sdp"
                android:textStyle="bold"
                android:scrollbars="vertical"
                android:paddingTop="@dimen/_15sdp"
                android:paddingLeft="@dimen/_14sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingRight="@dimen/_8sdp"
                android:background="@drawable/textoborde"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/idimgJ1"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_180sdp"
                app:cardCornerRadius="20sp"
                android:visibility="invisible"
                android:layout_margin="5dp"
                app:strokeWidth="4dp"
                app:strokeColor="#f9d99a"
                >

                <ImageView
                    android:id="@+id/idImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToOutline="true"
                    android:background="@color/fondolaberinto"/>
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_iniciar"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="Iniciar"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginRight="@dimen/_70sdp"
                android:background="@drawable/botonbordes2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/skippButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saltar"
                android:textStyle="bold"
                android:background="@drawable/botonbordes2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>